.content {
    position: absolute;
    top: 72px;
    left: 50%;
    bottom: 0;
    min-height: 560px;
    margin-top: 24px;
    transform: translateX(-50%);
    background-color: #fff;
}
.tip,
.sso-form-box {
    width: 450px;
    margin: 0 auto;
}
.tip {
    padding: 100px 0 0 6em;
    margin-bottom: 36px;
    font-size: 14px;
    line-height: 20px;
}
.tip .icon-prompt {
    vertical-align: text-bottom;
}
.sso-form-box .submit {
    margin-top: 12px;
    margin-left: 6em;
}