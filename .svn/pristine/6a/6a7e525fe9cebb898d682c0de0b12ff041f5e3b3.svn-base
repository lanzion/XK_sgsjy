$table-border-color: #dfe6ec;
$thead-bg-color: #eef1f6;
$tbody-border-color: #dfe6ec;
.data-table {
    .el-table__fixed-header-wrapper thead div,
    .el-table__header-wrapper thead div,
    &.el-table--enable-row-hover .el-table__body tr:hover > td,
    &.el-table {
        th {
            background-color: $thead-bg-color;
        }
    }
    &.el-table {
        thead div {
            background-color: transparent;
            font-weight: normal;
            text-align: center;
        }

        &,
        td,
        th.is-leaf {
            border-color: $table-border-color;
        }

        th.is-leaf {
            border-right-color: $tbody-border-color;
        }

        &:after,
        &:before {
            background-color: $table-border-color;
        }

        [class*="icon-btn-"],
        [class*=" icon-btn-"] {
            color: #626262;
            font-size: 18px;
            margin-right: 8px;
            vertical-align: baseline;
        }
    }
    &.el-table--enable-row-hover .el-table__body tr:hover > td {
        background-color: $thead-bg-color;
    }
    .el-table__body-wrapper {
        td {
            border-color: $tbody-border-color;
        }
    }
}