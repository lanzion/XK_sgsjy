@import '~@/assets/css/scss/vars.scss';
@import '~@/assets/css/scss/form.scss';
.pd5 {
    // padding: 0 5px;
    padding-right: 10px;
}
.enroll-form {
    .member-title {
        // text-align: center;
        // background-color: #dfdfdf;
        border-bottom: 1px solid #eee;
    }
    .member-list {
        // text-align: center;
        margin: 10px 0;
    }
    .add-member {
        padding: 0 5px;
        .add-member-btn {
            display: block;
            margin: 0 auto;
            width: 150px;
            height: 32px;
            border: 1px dashed #ccc;
            border-radius: 10px;
            text-align: center;
            font-size: 14px;
            i {
                font-size: 14px;
            }
            &:hover {
                border-color: $theme-color;
                color: $theme-color;
                i {
                    color: $theme-color;
                }
            }
        }
    }

    .upload-btn{
        width: 96px;
        height: 38px;
        line-height: 38px;
        border:1px solid #ccc;
        padding: 8px;
        margin-right: 15px;
        border-radius: 4px;
        i{
            font-size: 14px;
            color: $theme-color;
        }
        &:hover {
            border-color: $theme-color;
            color: $theme-color;
        }
    }

    .btn-group {
        width: 100%;
        text-align: center;
        .confirm-btn,.cancel-btn {
            display: inline-block;
            width: 114px;
            height: 36px;
            line-height: 32px;
            text-align: center;
            margin-right: 10px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
        }
        .confirm-btn {
            border: 1px solid $theme-color;
            color: #fff;
            background-color: $theme-color;
            &:hover {
                opacity: 0.75;
            }
        }
        .cancel-btn {
            border: 1px solid #e7e7e7;
            color: #000;
            background-color: #e7e7e7;
            &:hover {
                // background-color: $theme-color;
                color: $theme-color;
            }
        }
    }
}

.enroll-form {
    .el-form-item__label {
        color: #000;
    }

    .el-autocomplete {
        width: 100%;
    }

    .el-input__inner {
        height: 32px;
        line-height: 32px;
        border-radius: 6px;
    }

    .el-textarea__inner {
        height: 150px;
        border-radius: 6px;
    }

    .el-upload--picture-card {
        background-color: #f5fafe;
        border-color: #92cdfa;
        width: 300px;
        height: 200px;
        line-height: 200px;
    }
    .el-upload-list--picture-card {
        .el-upload-list__item {
            width: 300px;
            height: 200px;
        }
    }
}