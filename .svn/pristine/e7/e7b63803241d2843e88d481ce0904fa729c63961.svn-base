@import '~@/assets/css/scss/form.scss';
@each $color-key, $color-value in $color-data {
    .theme-#{$color-key} {
        .buttonGroup {
            a{
                border-radius: $button-radiu;
            }
            .reply_btn1 {
                background-color: $color-value;
            }
            .reply_btn2 {
                border: 1px solid $color-value;
                color: $color-value;
                &:hover{
                    background-color: $color-value;
                }
            }
        }
    }
}
.dialog{
	.header {
        height: 20px;
        line-height: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #D7D7D7;
        font-size: 16px;
    }
    .content-box{
    	margin: 35px 0 80px;
    	.label{
    		line-height: 38px;
    		margin: 0 18px 0px 40px;
    		font-size: 18px;
    	}
    	.upload-btn{
			width: 96px;
			height: 38px;
			line-height: 38px;
			border:1px solid #ccc;
			padding: 8px;
			margin-right: 15px;
            cursor: pointer;
			i{
				font-size: 14px;
				color: $theme-color;
			}
            &:hover {
                color: $theme-color;
                border-color: $theme-color;
            }
		}
    }
	.buttonGroup {
        height: 30px;
        text-align: right;
        padding: 0 0px 10px;
        .reply_btn {
            display: inline-block;
            width: 62px;
            height: 32px;
            line-height: 32px;
            text-align: center;
            box-sizing: border-box;
        }
        .reply_btn1 {
            color: #fff;
        }
        .reply_btn1:hover{
            opacity: 0.75;
        }
        .reply_btn2 {
            margin-top: 2px;
            margin-right: 10px;
            vertical-align: bottom;
        }
        .reply_btn2:hover{
            color:#fff;
        }
    }
}