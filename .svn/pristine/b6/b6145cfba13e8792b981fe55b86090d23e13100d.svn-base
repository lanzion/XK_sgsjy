.projectPublish, .servicePublish, .add-feature {
    .projectPhase {
        .el-form-item {
            width: 100%;
        }
    }
    .el-select .el-tag {
        margin-left: 5px;
    }
    .el-icon-date, .el-input__icon {
        width: 36px;
        font-size: 18px;
    }
    .cover-uploader{
      position: relative;
      border-radius: 3px;
      cursor: pointer;
      overflow: hidden;
      height: 100px;
      background-color: #fff9f9;
    }
    .tips {
        position: absolute;
        left: 120px;
        height: 100px;
        line-height: 100px;
        width: 400px;
    }
    .cover-uploader-icon {
      font-size: 18px;
      color: #8c939d;
      width: 100px;
      height: 100px;
      line-height: 100px;
      text-align: center;
    }
    .cover {
      width: 100px;
      height: 100px;
      display: block;
    }

    .upload-btn{
        width: 96px;
        height: 38px;
        line-height: 38px;
        border:1px solid #ccc;
        padding: 8px;
        margin-right: 15px;
        i{
            font-size: 14px;
            color: #d00;
        }
    }
    textarea {
        resize:none;
        height: 100%;
    }
    .el-upload {
        .el-upload-dragger {
            width: 100%;
            height: 100%;
            background-color: #fff9f9;
            .el-icon-upload {
                font-size: 40px;
                margin: 0;
            }
        }
    }
    .el-input__inner {
        border-radius: 4px;
    }
    .el-button {
        width: 92px;
        height: 32px;
        margin-bottom:10px;
        box-sizing: border-box;
        border: 1px solid #2797ed;
    }
}
