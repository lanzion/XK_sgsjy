.select-panel {
    display: none;
    position: absolute;
    width: 100%;
    margin-top: 6px;
    border: 1px solid #dfdfdf;
    border-radius: 4px;
    box-sizing: border-box;
    background-color: #fff;
    z-index: 1;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .1);
}
.select-panel .select-panel-tab {
    border-right: 1px solid #dfdfdf;
    white-space: nowrap;
    margin-right: -1px;
    background-color: #f5f7fa;
}
.select-panel .select-panel-tab li {
    float: left;
    width: 33.33%;
    border-bottom: 1px solid #dfdfdf;
    box-sizing: border-box;
}
.select-panel .select-panel-tab li + li {
    border-left: 1px solid #dfdfdf;
}
.select-panel .select-panel-tab li a {
    display: inline-block;
    width: 100%;
    height: 100%;
    text-indent: 15px;
    background-color: #f5f7fa;
}
.select-panel .select-panel-tab li.active {
    border-bottom: 1px solid #fff;
}
.select-panel .select-panel-tab li.active a {
    background-color: #fff;
}
.select-panel .select-panel-tab li:only-child a {
    background-color: #f5f7fa;
}
.select-panel .select-panel-content {
    margin-bottom: -1px;
}
.select-panel .select-panel-content-box {
    display: none;
    max-height: 180px;
    padding: 5px;
    overflow-y: auto;
    border-bottom: 1px solid #dfdfdf;
}
.select-panel .select-panel-content-box.active {
    display: block;
}
.select-panel .select-panel-content-box li {
    float: left;
    display: inline-block;
    margin: 1px 2px;
}
.select-panel .select-panel-content-box li a {
    display: inline-block;
    width: 100%;
    height: 100%;
    padding: 0 10px;
    box-sizing: border-box;
    border-radius: 5px;
}
.select-panel .select-panel-content-box li a:hover {
    background-color: #f5f7fa;
    color: #23b8ff;
}
.select-panel .select-panel-content-box li.active a {
    background-color: #23b8ff;
    color: #fff;
}