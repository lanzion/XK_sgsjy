$box-padding: 10px;
#list {
    margin: 10px -#{$box-padding};
}

.isNull-list {
    width: auto;
    margin: 0 #{$box-padding};
}
.list {
    font-size: 0;
    .list-item__box {
        display: inline-block;
        box-sizing: border-box;
        padding: $box-padding;
        /* margin-bottom: $box-padding; */
        list-style: none;
        overflow: hidden;
    }
}