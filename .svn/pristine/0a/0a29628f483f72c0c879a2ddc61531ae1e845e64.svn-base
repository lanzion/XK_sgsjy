@import '~@/assets/css/scss/vars.scss';
.works-list {
	.list {
		.img-box {
			position: relative;
			.praise-num {
				position: absolute;
				top: 0px;
				right: 0px;
				padding: 4px;
				color: #fff;
				font-size: 12px;
				background-color: rgba(0,0,0,0.5);
			}
		}
		.list-item-title {
			span {
				display: inline-block;
			}
				.works-name {
				width: 75%;
				&:hover {
					color: $theme-color;
				}
			}
			.user-name {
				width: 25%;
				text-align: right;
			}
		}
	}
}