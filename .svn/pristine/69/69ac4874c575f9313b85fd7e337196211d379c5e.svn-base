@import './vars.scss';
@each $color-key, $color-value in $color-data-set {
	.theme-#{$color-key},
	.theme-#{$color-key} ~ .el-popover {
		.i-form-button {
			color: #fff;
			background-color: nth($color-value, 3);
			border-color: nth($color-value, 3);

			&:hover {
				background-color: nth($color-value, 1);
				border-color: nth($color-value, 1);
			}
			&.is-plain {
				color: nth($color-value, 1);
				background-color: #fff;
				&:hover,
				&.active {
					background-color: nth($color-value, 3);
					color: #fff;
				}
			}
			& + .i-form-button {
				margin-left: 10px;
			}
		}
		.el-input,
		.el-select,
		.el-cascader {
			&:hover {
				.el-input__inner {
					border-color: nth($color-value, 3);
				}
			}
		}
		.search {
			border-color: nth($color-value, 3);
			.el-search_btn {
				background-color: nth($color-value, 3);

				&:hover {
					background-color: nth($color-value, 1);
				}
			}
		}
		.el-textarea__inner {
			&:hover,
			&:focus {
				border-color: nth($color-value, 1);
			}
		}
		.el-rate__icon {
			color: nth($color-value, 1);
		}
		.el-rate__decimal {
			color: nth($color-value, 1) !important;
		}
		.el-radio__inner{
			&::after {
				background-color: nth($color-value, 1);
			}
			&:hover {
				border-color: nth($color-value, 1);
			}
		}
		.el-checkbox__inner {
			&:hover {
				border-color: nth($color-value, 1);
			}
			&::after {
				border-color: nth($color-value, 1);
			}
		}
		.el-checkbox__input.is-checked {
			.el-checkbox__inner {
				background-color: #fff;
				border-color: nth($color-value, 1);
			}
		}
		.el-checkbox__input.is-disabled.is-checked {
			.el-checkbox__inner {
				background-color: #d1dbe5;
				border-color: #d1dbe5;
			}
		}
		.el-form-tags {
			.el-checkbox + .el-checkbox {
				margin-left: 0;
			}
			.el-checkbox__label {
				padding-left: 0;
			}
			.el-checkbox__input {
				display: none;
			}
			.el-checkbox__input.is-checked + .el-checkbox__label {
				.el-tag {
					color: #fff;
					background-color: nth($color-value, 1);
				}
			}
		}
		.el-tag {
			color: nth($color-value, 1);
			border-color: nth($color-value, 1);
			background-color: #fff;

			&.is-active {
				background-color: nth($color-value, 1);
			}
		}
		.el-tag--success {
		    background-color: rgba(18, 206, 102, 0.1);
		    border-color: rgba(18, 206, 102, 0.2);
		    color: #13ce66;
		}
		.el-dialog {
			border-top: 3px solid nth($color-value, 1);
		}
		.el-dialog__close:hover {
			color: nth($color-value, 1);
		}
		.el-button--primary {
			background-color: nth($color-value, 1);
			&:focus,
			&:hover {
				background-color: nth($color-value, 1);
			}
		}
		.el-button--text {
			color: nth($color-value, 1);
			border: 1px solid $theme_color;
			padding: 3px 4px;
			&:focus,
			&:hover {
				color: #fff;
				background-color: nth($color-value, 1);
			}
		}
		.el-input-number__decrease,
		.el-input-number__increase {
			&:hover {
				color: nth($color-value, 1);
				&:not(.is-disabled) ~ .el-input .el-input__inner:not(.is-disabled) {
					border-color: nth($color-value, 1);
				}
			}
		}
	}
	.theme-#{$color-key} ~ .el-message-box__wrapper {
		.el-message-box {
			&.__custom-msg-box {
				width: 476px;
				.el-message-box__header {
					border-top: 3px solid nth($color-value, 1);
					border-bottom: 1px solid #c9c9c9;
					line-height: 52px;
				}
				.el-button {
					padding: .5em 1em;
					border: 1px solid nth($color-value, 1);
					border-radius: $button-radiu;
					color: nth($color-value, 1);
					&:hover {
						background-color: $theme_color;
						color: #fff;
					}
					&.el-button--primary {
						color: #fff;
						background-color: nth($color-value, 1);
						&:hover {
							opacity: 0.75
						}
					}
				}
			}
		}
	}

	.i-form-button {
		color: #fff;
	}
	.el-tag {
		&.is-active {
			color: #fff;
		}
	}
	.el-checkbox__input.is-checked {
		.el-checkbox__inner {
			background-color: #fff;
		}
	}
	.admin_project_publish, .servicePublish {
		.cover-uploader,.el-upload-dragger {
			border: 1px dotted nth($color-value, 1);
			&:hover {
				border-color: nth($color-value, 1);
			}
		}
		.el-button--primary, .el-button--primary:hover {
			background-color: nth($color-value, 1);
		}
		.el-button--default {
			border-color: nth($color-value, 1);
			color: nth($color-value, 1);
		}
	}
}

$status-color-data: (pending: #e4e8f1 #e4e8f1 #3e3e3e, success: #f6fff9 #b5e8ad #2bbc61, fail: #ffeded #ffd0d0 #ff4949, submit: #faebf0 #f4c8d8 #db8ba8, auditing: #e5f3fe #b9dbf6 #2797ed, hot: #ffeded #ffd0d0 #d00, recommend: #faf3e3 #ffdf91 #ff9800);
@each $color-key, $color-value in $status-color-data {
	.__color-#{$color-key} {
		&.el-tag {
			background-color: nth($color-value, 1);
			border-color: nth($color-value, 2);
			color: nth($color-value, 3);
		}
	}
}

// 确认按钮
.psn-confirm-btn {
	padding: 5px 15px;
	font-size: 14px;
	color: #fff;
	background-color: $theme_color;
	border-radius: $button-radiu;
	margin-right: 10px;
	// line-height: 1;
	&:hover {
		opacity: 0.75
	}
}

// 取消按钮
.psn-cancel-btn {
	padding: 4px 14px;
	border: 1px solid $theme_color;
	color: $theme_color;
	font-size: 14px;
	border-radius: $button-radiu;
	margin-right: 10px;
	// line-height: 1;
	&:hover {
		background-color: $theme_color;
		color: #fff;
	}
}

// 上传按钮
.psn-upload-btn{
    width: 96px;
    height: 38px;
    line-height: 38px;
    border:1px solid #ccc;
    padding: 8px;
    margin-right: 15px;
    cursor: pointer;
    i{
        font-size: 14px;
        color: $theme_color;
    }
    &:hover {
        border-color: $theme_color;
        color: $theme_color;
    }
}

// 上传封面
.psn-cover-uploader{
  position: relative;
  border-radius: 3px;
  cursor: pointer;
  overflow: hidden;
  height: 100px;
  border: 1px dotted #23b8ff;
  background-color: #def5ff;
}
.psn-cover-uploader-icon {
  font-size: 18px;
  color: #8c939d;
  width: 100px;
  height: 100px;
  line-height: 100px;
  text-align: center;
}
.psn-cover {
  width: 100px;
  height: 100px;
  display: block;
}
