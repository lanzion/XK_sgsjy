
@import './vars.scss';
$head-face-size: 72px;
$gray: #c9c9c9;
.title {
    padding: 10px 0;
    line-height: 32px;
    border-bottom: 1px dotted $gray;
    .title_l {
        .checkbox {
            margin-right: 10px;
        }
        .btn {
            border: none;
            color: #23b8ff;
            &:hover {
                color: $theme_color;
            }
        }
    }
    .title_r {
        height: 30px;
        .func_l_btn {
            height: 30px;
            margin-left: 10px;
            border: 1px solid $theme_color;
            border-radius: $button-radiu;
            color: $theme_color;
            &:hover {
                color: #fff;
                background-color: $theme_color;
            }
        }
    }
    .classify {
        .classify_title {
            height: 40px;
            line-height: 40px;
            background-color: #eee;
            text-indent: 1em;
        }
        .classify_list {
            border-left: 1px solid $gray;
            border-right: 1px solid $gray;
            .classify_li {
                line-height: 2;
                padding: 8px 15px;
                border-bottom: 1px solid $gray;
                .icon-btn-i-edit2 {
                    font-size: 1.3em;
                    padding-top: 8px;
                    padding-right: 8px;
                }
            }
        }
        .classify_add {
            position: relative;
            width: 100%;
            height: 40px;
            border: 1px dotted $theme_color;
            border-radius: 5px;
            background-color: $nav-bgc;
            margin: 10px 0;
            .icon-btn-i-add-circle {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: #3e3e3e;
                &::before {
                    color: #3e3e3e;
                }
            }
            &:hover {
                color: $theme_color;
                .icon-btn-i-add-circle {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    color: $theme_color;
                    &::before {
                        color: $theme_color;
                    }
                }
            }
        }
    }
}
.setClassify {
    .setClassify_name, .setClassify_group {
        padding-left: 10%;
    }
    .button_group {
        margin-top: 30px;
        text-align: right;
        padding-right: 10%;
        .btn1, .btn2 {
            width: 64px;
            height: 32px;
            border-color: $theme_color;
            color: $theme_color;
        }
        .btn2 {
            margin-left: 10px;
            background-color: $theme_color;
            color: #fff;
        }
    }
}
.focus_ul {
    font-size: 14px;
    .focus_li {
        position: relative;
        padding: 20px 0;
        box-sizing: border-box;
        border-bottom: 1px dotted $gray;
        .member-item-head {
            width: $head-face-size;
            height: $head-face-size;
            margin-left: 40px;
        }
        .focus_li_box {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translate(0, -50%);
            width: 18px;
            height: 18px;
            overflow: hidden;
        }
        .focus_li_content {
            display: inline-block;
            height: 100%;
            line-height: 1.5;
            padding-left: 10px;
            box-sizing: border-box;
            .name {
                font-size: 1.28em;
                &:hover {
                    color: #2e94e9;
                }
            }
            .follow_mes {
                font-size: .85em;
                color: #c9c9c9;
            }
        }
        .btn_group {
            .btn {
                display: block;
                padding: 2px 0;
                border: none;
                &:hover {
                    color: $theme_color;
                }
            }
            .blackList-btn {
                display: block;
                padding: 2px 0;
                border: none;
                cursor: no-drop;
                color: #ccc;
            }
        }
    }
}